@model IEnumerable<LibraryManagerPro.Models.Autor>

@{
    ViewData["Title"] = "Autores";
    var total = Model.Count();
}

<div class="container mt-4">
    <h2 class="mb-4">👤 Catálogo de Autores</h2>

    <form method="get" asp-action="Index" class="input-group mb-4">
        <input type="text" name="searchString" value="@Context.Request.Query["searchString"]"
               class="form-control" placeholder="Buscar por nome ou nacionalidade..." />
        <button type="submit" class="btn btn-primary">
            Buscar
            @if (total > 0)
            {
                <span class="badge bg-light text-dark ms-1">@total</span>
            }
        </button>
        @if (!string.IsNullOrEmpty(Context.Request.Query["searchString"]))
        {
            <a asp-action="Index" class="btn btn-secondary ms-2">Limpar Busca</a>
        }
    </form>

    @if (total == 0)
    {
        <div class="alert alert-warning text-center">
            Nenhum autor encontrado para sua busca.
        </div>
    }
    else
    {
        <p class="text-muted">Mostrando <strong>@total</strong> autor(es).</p>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var autor in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm p-3">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@autor.Nome</h5>
                            <p class="card-text text-muted">Nacionalidade: @autor.Nacionalidade</p>
                            <p class="card-text">Nascimento: @autor.DataNascimento.ToShortDateString()</p>
                        </div>
                        <div class="card-footer text-center">
                            <a asp-action="Details" asp-route-id="@autor.Id" class="btn btn-info btn-sm me-1">Detalhes</a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@autor.Id" class="btn btn-warning btn-sm me-1">Editar</a>
                                <a asp-action="Delete" asp-route-id="@autor.Id" class="btn btn-danger btn-sm">Excluir</a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="d-flex justify-content-center mt-4">
            <nav>
                <ul class="pagination">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@i"
                               asp-route-searchString="@ViewBag.SearchString">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }

    @if (User.IsInRole("Admin"))
    {
        <div class="mt-3">
            <a asp-action="Create" class="btn btn-success">Adicionar Novo Autor</a>
        </div>
    }
</div>
